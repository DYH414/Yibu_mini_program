.agreement-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
}

.header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.content-scroll {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
  padding-bottom: 100rpx;
}

.footer {
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  bottom: 0;
}

.btn-confirm {
  background-color: #FF6B6B;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 88rpx;
  height: 88rpx;
} 