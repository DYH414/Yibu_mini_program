/* 商家详情页 wxss */
.container {
  padding: 24rpx;
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80vh;
  color: #999;
  font-size: 28rpx;
}

/* 商家头部信息 */
.merchant-header {
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.merchant-basic-info {
  display: flex;
  position: relative;
}

.merchant-logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.merchant-logo image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.merchant-info {
  flex: 1;
}

.merchant-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.merchant-rating {
  margin-bottom: 12rpx;
}

.merchant-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.favorite-btn {
  position: absolute;
  top: 0;
  right: 0;
}

.favorite-btn image {
  width: 48rpx;
  height: 48rpx;
}

/* 平台跳转部分 */
.platform-section {
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333;
}

.platform-list {
  display: flex;
  flex-wrap: wrap;
}

.platform-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  width: 120rpx;
}

.platform-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.platform-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 评分部分 */
.rating-section {
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.user-rating {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rate-stars {
  display: flex;
  margin-bottom: 20rpx;
}

.rate-star-big {
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
}

.rating-tip {
  font-size: 26rpx;
  color: #999;
}

/* 评论部分 */
.comment-section {
  padding: 30rpx;
}

.comment-list {
  margin-bottom: 30rpx;
}

.comment-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-user {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  margin-left: 12rpx;
}

.comment-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  margin-bottom: 16rpx;
}

.comment-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.like-btn {
  display: flex;
  align-items: center;
}

.like-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.like-btn text {
  font-size: 24rpx;
  color: #999;
}

.like-btn.active text {
  color: #FF6B6B;
}

/* 评论输入区 */
.comment-input-area {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.comment-input {
  flex: 1;
  height: 68rpx;
  background-color: #f5f5f5;
  border-radius: 34rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.comment-submit-btn {
  margin-left: 16rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
}

/* 空状态和加载状态 */
.empty-state, .loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 160rpx;
  color: #999;
  font-size: 28rpx;
} 