.container {
  padding: 20rpx;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.fix-btn {
  margin: 30rpx 0;
  background-color: #07c160;
  color: #fff;
}

.result {
  margin-top: 30rpx;
  border-top: 1px solid #eee;
  padding-top: 20rpx;
}

.result-header {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #07c160;
}

.item {
  font-size: 26rpx;
  padding: 10rpx;
  border-bottom: 1px solid #f5f5f5;
}

.item:last-child {
  border-bottom: none;
} 