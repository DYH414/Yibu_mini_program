/* 管理员页面样式 */
.container {
  padding: 30rpx;
}

.header {
  margin-bottom: 50rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.content {
  width: 100%;
}

.action-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 30rpx;
  background-color: #07c160;
  color: white;
}

.back-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 50rpx;
}

.unauthorized {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.warning {
  font-size: 32rpx;
  color: #e64340;
}

.result-container {
  margin-top: 50rpx;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result-item {
  display: flex;
  margin-bottom: 15rpx;
}

.label {
  width: 150rpx;
  color: #666;
}

.value {
  flex: 1;
  font-weight: bold;
} 