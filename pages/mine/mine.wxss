/* 我的页面样式 */
.container {
  padding: 30rpx 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #FF6B6B 0%, #FF9E53 100%);
  opacity: 0.8;
}

/* 用户信息头部 */
.user-header {
  position: relative;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  box-shadow: 0 8rpx 20rpx rgba(255, 154, 158, 0.3);
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-wrapper {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, rgba(255,255,255,0.9), rgba(255,255,255,0.6));
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.1);
  padding: 5rpx;
}

.user-avatar, .default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  object-fit: cover;
}

.user-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

.edit-profile {
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 30rpx;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  color: #fff;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.edit-text {
  font-size: 24rpx;
}

.button-hover {
  opacity: 0.8;
  transform: scale(0.98);
  transition: all 0.2s ease;
}

/* 统计数据 */
.user-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
  padding: 10rpx 0;
  transition: all 0.3s ease;
}

.stat-hover {
  opacity: 0.8;
}

.stat-count {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 6rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.stat-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-line {
  position: absolute;
  bottom: -10rpx;
  width: 0;
  height: 6rpx;
  background-color: #fff;
  border-radius: 3rpx;
  transition: width 0.3s ease;
  opacity: 0;
}

.active-stat .stat-count,
.active-stat .stat-label {
  color: #fff;
  font-weight: 600;
}

.active-line {
  width: 40rpx;
  opacity: 1;
}

