/* 我的页面样式 */
.container {
  padding: 20rpx;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 用户信息头部 */
.user-header {
  position: relative;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 34rpx;
  font-weight: bold;
}

.edit-profile {
  position: absolute;
  right: 0;
  top: 0;
  background-color: #f8f8f8;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.edit-text {
  font-size: 24rpx;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-count {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
}

/* 未登录状态 */
.not-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.login-tip {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.login-btn {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #07c160;
  border-radius: 40rpx;
}

/* 收藏列表 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  padding-left: 10rpx;
}

.favorite-list {
  margin-bottom: 30rpx;
}

.favorite-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.favorite-content {
  display: flex;
  padding-bottom: 20rpx;
}

.merchant-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.merchant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.merchant-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.merchant-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.favorite-actions {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.cancel-btn {
  padding: 10rpx 30rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 其他操作 */
.action-list {
  margin-top: 30rpx;
}

.action-item {
  padding: 30rpx 0;
  font-size: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-item:last-child {
  border-bottom: none;
}

.logout {
  color: #e64340;
  text-align: center;
}

/* 通用样式 */
.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
} 