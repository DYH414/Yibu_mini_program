/* 我的页面样式 */
.container {
  padding: 30rpx 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #FF6B6B 0%, #FF9E53 100%);
  opacity: 0.8;
}

/* 用户信息头部 */
.user-header {
  position: relative;
  margin-bottom: 36rpx;
  padding: 40rpx 36rpx;
  border-radius: 30rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.user-avatar:active {
  transform: scale(0.95);
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.edit-profile {
  position: absolute;
  right: 0;
  top: 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.edit-profile:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
}

.edit-text {
  font-size: 24rpx;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  padding-top: 36rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-count {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF9E53 100%);
  -webkit-background-clip: text;
  color: transparent;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
}

/* 未登录状态 */
.not-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
}

.default-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 107, 107, 0.4);
  }
  70% {
    box-shadow: 0 0 0 16rpx rgba(255, 107, 107, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 107, 107, 0);
  }
}

.login-tip {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 36rpx;
}

.login-btn {
  width: 60%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF9E53 100%);
  border-radius: 44rpx;
  box-shadow: 0 8rpx 16rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
  border: none;
}

.login-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 107, 0.3);
}

/* 收藏列表 */
.section-title {
  font-size: 34rpx;
  font-weight: bold;
  margin: 36rpx 0 24rpx;
  padding-left: 16rpx;
  position: relative;
  color: #333;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF9E53 100%);
  border-radius: 3rpx;
}

.favorite-list {
  margin-bottom: 36rpx;
}

.favorite-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
  transform: translateZ(0);
}

.favorite-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08);
}

.favorite-content {
  display: flex;
  padding-bottom: 24rpx;
}

.merchant-logo {
  width: 130rpx;
  height: 130rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  object-fit: cover;
}

.favorite-content:active .merchant-logo {
  transform: scale(0.95);
}

.merchant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.merchant-name {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

.merchant-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.favorite-actions {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  padding-top: 24rpx;
}

.cancel-btn {
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.cancel-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 70rpx 0;
  color: #999;
  font-size: 30rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
  100% {
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
  font-size: 30rpx;
}

/* 其他操作 */
.action-list {
  margin-top: 36rpx;
}

.action-item {
  padding: 36rpx 0;
  font-size: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  color: #333;
}

.action-item::after {
  content: '>';
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #ccc;
  font-size: 28rpx;
}

.action-item:active {
  background-color: rgba(0, 0, 0, 0.02);
}

.action-item:last-child {
  border-bottom: none;
}

.logout {
  color: #FF6B6B;
  text-align: center;
}

.logout::after {
  display: none;
}

/* 通用样式 */
.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 头像容器和边框 */
.avatar-container {
  position: relative;
  width: 170rpx;
  height: 170rpx;
  margin-bottom: 24rpx;
}

.avatar-border {
  position: absolute;
  top: -5rpx;
  left: -5rpx;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 107, 107, 0.2);
  box-shadow: 0 0 20rpx rgba(255, 107, 107, 0.2);
  animation: rotate 10s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 按钮悬停效果 */
.button-hover {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 统计项悬停效果 */
.stat-hover {
  transform: translateY(-4rpx);
}

.stat-line {
  width: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #FF6B6B 0%, #FF9E53 100%);
  margin-top: 8rpx;
  transition: width 0.3s ease;
}

.stat-item:hover .stat-line,
.stat-hover .stat-line {
  width: 40rpx;
}

/* 分区标题和更多 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 36rpx 0 24rpx;
  padding: 0 16rpx;
}

.section-more {
  font-size: 26rpx;
  color: #999;
  position: relative;
  padding-right: 24rpx;
}

.section-more::after {
  content: '>';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #ccc;
}

/* 卡片悬停效果 */
.card-hover {
  transform: translateY(-6rpx);
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 空状态操作按钮 */
.empty-action {
  margin-top: 24rpx;
  color: #FF6B6B;
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border: 1px solid rgba(255, 107, 107, 0.3);
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.empty-action:active {
  background-color: rgba(255, 107, 107, 0.05);
  transform: scale(0.95);
}

/* 加载动画 */
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 107, 107, 0.1);
  border-top: 4rpx solid #FF6B6B;
  border-radius: 50%;
  margin: 0 auto 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

